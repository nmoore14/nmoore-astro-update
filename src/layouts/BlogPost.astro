---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import ActionsBar from '../components/ActionsBar.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';

type Props = CollectionEntry<'blog'>['data'];

const { id, title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<html lang="en" transition:animate="none">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body class="content-grid">
		<Header />
    { id && <ActionsBar parentPage="blog" /> }
		<main transition:animate="slide" class="full-width content-grid">
			<article class="content">
				<div class="hero-image">
					{heroImage && <img width={1020} height={510} src={heroImage} alt="" transition:name=`blog-hero-img-${id}`/>}
				</div>
				<div class="prose">
					<div class="title-info">
						<div class="date">
							<FormattedDate date={pubDate} />
							{
								updatedDate && (
									<div class="last-updated-on">
										Last updated on <FormattedDate date={updatedDate} />
									</div>
								)
							}
						</div>
						<h1 class="title">{title}</h1>
						<hr />
					</div>
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>

<style>
.hero-image {
  width: 100%;
}

.hero-image img {
  display: block;
  margin: 0 auto;
  border-radius: 12px;
  box-shadow: var(--box-shadow);
}

.prose {
  width: 720px;
  max-width: calc(100% - 2em);
  margin: auto;
  padding: 1em;
  color: var(--text);
}

.title-info {
  margin-bottom: 1em;
  padding: 1em 0;
  text-align: center;
  line-height: 1;
}

.title {
  margin: 0 0 0.5em 0;
  color: var(--title-color);
}

.date {
  margin-bottom: 0.5em;
  color: rgb(var(--gray));
}

.last-updated-on {
  font-style: italic;
}

.prose h2 {
  color: var(--title-color);
}

@media (max-width: 720px) {
  .title {
    font-size: 2.25rem;
  }

  .prose h2 {
    font-size: 1.75rem;
    padding-top: 1.5rem;
  }

  .prose {
    width: 100%;
    padding: .25em;
  }

  .prose p {
    padding: .5rem 0;
  }
}
</style>
