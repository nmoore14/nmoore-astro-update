---
import { Icon } from 'astro-icon'

const { parentPage } = Astro.props
---
<div class="actionBar">
  <div class="actionsLeft">
    <a href={`/${parentPage}`}>
      <Icon pack="eva" name="arrow-back-outline" class="backArrow" />
    </a>
  </div>
  <div class="actionsRight">
  </div>
</div>

<style>
.actionBar {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.actionsLeft, .actionsRight {
  padding: .5rem .75rem;
}

.backArrow {
  height: 2rem;
  width: auto;
}
</style>
