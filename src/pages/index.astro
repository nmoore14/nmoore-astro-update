---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Bento from '../components/ui/bento/Bento.astro';

import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en" transition:animate="none">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header title={SITE_TITLE} />
		<main transition:animate="slide">
			<h1 class="title">Welcome! I'm Nick...</h1>
			<p>
        I'm a passionate Senior Web Developer committed to driving team productivity, delivering top-tier projects, and crafting impactful solutions through cutting-edge technologies with
        unwavering dedication to exceptional customer service.
			</p>
			<h2 class="sub-title" style="margin-top: 10rem; text-align: right;">...still building!</h2>
      <Bento />
		</main>
		<Footer />
	</body>
</html>
